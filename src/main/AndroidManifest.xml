<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fillikenesucn.petcare"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Pet Care"
        android:theme="@style/CustomTheme">
        <activity android:name=".activity.PETCARE.PetInfoFragmentActivity"></activity>
        <activity android:name=".activity.PETCARE.PetListFragmentActivity" />
        <activity android:name=".activity.PETCARE.AddEventFragmentActivity" />
        <activity android:name=".activity.PETCARE.ScannerMainFragmentActivity" />
        <activity android:name=".activity.PETCARE.RegisterPetFragmentActivity" />
        <activity android:name=".activity.PETCARE.MainMenuFragmentActivity" />
        <activity android:name=".activity.PETCARE.HomeFragmentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UHFMainActivity"
            android:label="PetCare"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>