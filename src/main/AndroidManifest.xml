<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fillikenesucn.petcare"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Pet Care"
        android:theme="@style/CustomTheme">
        <activity android:name=".activities.ModifyPetInfoFragmentActivity"></activity>
        <activity android:name=".activities.RegisterScannedPetFragmentActivity" />
        <activity android:name=".activities.AddEventOldPetFragmentActivity" />
        <activity android:name=".activities.EventListFragmentActivity" />
        <activity android:name=".activities.PetInfoFragmentActivity" />
        <activity android:name=".activities.PetNotFoundFragmentActivity"/>
        <activity android:name=".activities.PetListFragmentActivity" />
        <activity android:name=".activities.AddEventFragmentActivity" />
        <activity android:name=".activities.ScannerMainFragmentActivity" />
        <activity android:name=".activities.RegisterPetFragmentActivity" />
        <activity android:name=".activities.MainMenuFragmentActivity" />
        <activity android:name=".activities.HomeFragmentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>