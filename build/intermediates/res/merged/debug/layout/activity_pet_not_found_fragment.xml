<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:layout_height="match_parent"
    tools:context=".activity.PETCARE.ScannerMainFragmentActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="center_horizontal"
            android:text="Escaneando mascota"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="324dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/rectangle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:gravity="center_horizontal"
            android:text="Mascota No Encontrada"
            android:textColor="@color/petcarered"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="324dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/error404" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Â¿Desea registrar otra mascota?"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSiRegistrar"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@drawable/button_bg3"
                android:text="Si"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnNoRegistrar"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@drawable/button_bg2"
                android:text="No"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>